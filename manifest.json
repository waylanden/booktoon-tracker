{
  "manifest_version": 3,
  "name": "Booktoon Tracker",
  "description": "Track reading progress and updates on booktoon/webtoon sites.",
  "version": "0.1.0",
  "action": {
    "default_title": "Booktoon Tracker",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["logger.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}

